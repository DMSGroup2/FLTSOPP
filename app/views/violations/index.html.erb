<p id="notice"><%= notice %></p>

<h1>Violations</h1>

<table>
  <thead>
    <tr>
      <th>Violation type</th>
      <th>Stop outcome</th>
      <th>Is arrested</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @violations.each do |violation| %>
      <tr>
        <td><%= violation.violation_type %></td>
        <td><%= violation.stop_outcome %></td>
        <td><%= violation.is_arrested %></td>
        <td><%= link_to 'Show', violation %></td>
        <td><%= link_to 'Edit', edit_violation_path(violation) %></td>
        <td><%= link_to 'Destroy', violation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

